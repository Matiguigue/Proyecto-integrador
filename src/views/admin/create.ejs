<%- include('../partials/header') %>

<!--inicio del formulario-->
<div class="container">
    <h3 class="crear-nuevo-item">CREAR NUEVO ITEM</h3>
    <form class="formu" action="/admin/create" method="POST" enctype="multipart/form-data">

    <div class="formu__div__selectores">
        <div class="div__cyl">
            <label for="categoria" class="form__label__1">Categoría:</label>
            <select id="categoria" name="category" placeholder="Seleccionar" class="form__label__selec">
                <option value="1">Figuras Coleccionables</option>
                <option value="2">Llaveros</option>
                <option value="3">Remeras</option>
            </select>
        </div>
        <div class="div__cyl">
            <label for="licencia" class="form__label__1">Licencia:</label>
            <select id="licencia" name="licence" placeholder="seleccionar" class="form__label__selec">
                <option value="2">Star Wars</option>
                <option value="1">Pokemon</option>
                <option value="3">Harry Potter</option>
            </select>
        </div>
    </div>

    <div class="formu__div__producto">
        <label for="mensaje" class="form__label" class="form__mensaje">Nombre del producto:</label>
        <input class="form__inpu__producto" type="text" placeholder="Kakashi Hatake Shippuden Saga" size="24">
    </div>

    <div class="formu__div__txt">
        <textarea class="div__txt" name="description" id="description" cols="150" rows="10"
            placeholder=" Descripción del producto"></textarea><br>
    </div>

    <div class="formu__div__sps">
        <div>
            <label for="sku" class="form__label__sps">SKU:</label>
            <input class="form__input" type="text" name="sku" id="sku" placeholder="SSK111AB001" size="8">
        </div>
        <div>
            <label for="precio" class="form__label__sps">Precio: $</label>
            <input class="form__input" type="text" name="price" id="price" placeholder="0.000,00" size="8">
        </div>
        <div>
            <label for="stock" class="form__label__sps">Stock:</label>
            <input class="form__input" type="text" name="stock" id="stock" placeholder="0" size="1">
        </div>
    </div>

    <div class="formu__div__dc">
        <div>
            <label for="descuentos" class="form__label__dc">Descuento:</label>
            <input class="form__input" type="text" name="discount" id="discount" placeholder="0%" size="1">
        </div>
        <div>
            <label for="cuotas" class="form__label__dc">Cuotas:</label>
            <select id="dues" name="dues" class="form__label__selec">
                <option>Sin cuotas</option>
                <option>3 Cuotas sin interés</option>
                <option>6 Cuotas sin interés</option>
                <option>9 Cuotas sin interés</option>
                <option>12 Cuotas sin interés</option>
                <option>24 Cuotas sin interés</option>
            </select>
        </div>
    </div>
    <div class="container__edit">
        <label class="edit__label__product">Imagenes:</label>
        <input type="file" id="uploadBtn" name="images" multiple>
        <label for="uploadBtn" class="edit__label__submit"><i class="fa-solid fa-upload"></i> Upload File</label>
    </div>
    <div class="formu__div__botones">
        <input class="form__boton__1" type="submit" value="Agregar producto">
        <input class="form__boton__2" type="reset" value="Limpiar">
    </div>
    </form>
</div>

<!-- inicio del footer -->

<%- include('../partials/footer') %>

<!-- fin del footer -->
<script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.7/dist/iconify-icon.min.js"></script>
<!--libreria iconify-->
<script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
<script src="../../js/glide.js"></script>
</body>

</html>