<%- include('../partials/header') %>

<section class="admin__container">
    <div class="admin__search">
        <iconify-icon icon="mingcute:search-line" class="search-icon"></iconify-icon><input type="search" name="search"
            class="search-input" placeholder="código, nombre o categoría">
    </div>
    <div class="tbl__col__title">
        <h1 class="tbl__title">LISTADO DE PRODUCTOS</h1>
        <p id="tbl__insert-item">AGREGAR</p>
        <iconify-icon icon="icon-park-solid:add" class="tbl__icon__add"></iconify-icon>
    </div>

    <table class="tbl__items">
        <thead class="tbl__head"></thead>
        <tr class="tbl__row">
            <th class="tbl__item">ID</th>
            <th class="tbl__item">Código</th>
            <th class="tbl__item">Nombre del Producto</th>
            <th class="tbl__item">Categoría</th>
        </tr>

        <% data.forEach(product =>  %>
        <tr class="tbl__row">
            <td class="tbl__item">1</td>
            <td class="tbl__item">STW0010001</td>
            <td class="tbl__item">Baby Yoda Blueball</td>
            <td class="tbl__item">Figura Coleccionable</td>
            <td class="tbl__item tbl__icon__pencil">
                <iconify-icon icon="subway:pencil"></iconify-icon>
            </td>
            <td class="tbl__item  tbl__icon__trash">
                <iconify-icon icon="iconamoon:trash-fill"></iconify-icon>
            </td>
            <% )}; %>

        </tr>
        </thead>
        <tr class="tbl__row">

        </tr>
    </table>
</section>
<%- include('../partials/footer') %>
